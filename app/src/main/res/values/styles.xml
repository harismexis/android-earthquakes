<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTxtv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/default_text_color</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ToolbarText" parent="BaseTxtv">
        <item name="android:textSize">@dimen/toolbar_text_size</item>
    </style>

    <style name="AppToolbar">
        <item name="android:background">@color/black</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="VhQuakeTxtv" parent="BaseTxtv">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/vh_quake_item_meta_text_size</item>
    </style>

    <style name="VhQuakeMetaTxtv" parent="VhQuakeTxtv">
        <item name="android:layout_marginStart">10dp</item>
    </style>

</resources>